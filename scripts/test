#!/bin/bash
set -e

if [[ -n "${RF_DEBUG}" ]]; then
    set -x
fi
DIR="$(dirname "$0")"

function usage() {
    echo -n \
"Usage: $(basename "$0")

Run tests
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        # Lint Bash scripts
        if which shellcheck; then
            find ./scripts -not -name "*.py*" -type f -exec shellcheck {} +
        fi

        # Run linter/inspector to identify issues with app-server
        docker-compose \
            -f "${DIR}/../docker-compose.yml" run \
            --rm \
            --entrypoint "/bin/bash -c" \
            app-server "./sbt scapegoat"

        # TODO: uncomment once https://github.com/azavea/raster-foundry/issues/409
        # is resolved
        # Run scala tests for app-server
#        docker-compose \
#            -f "${DIR}/../docker-compose.yml" run \
#            --rm \
#            --entrypoint "/bin/bash -c" \
#            app-server "./sbt test"

        # TODO: uncomment once https://github.com/azavea/raster-foundry/issues/435
        # is resolved
        # Run js tests for app-frontend
#       docker-compose \
#           -f "${DIR}/../docker-compose.yml" run \
#            --rm \
#            --entrypoint "/bin/bash -c" \
#            app-frontend "npm run test"

        # Run tests for app tasks library
        docker-compose \
            -f "${DIR}/../docker-compose.yml" run \
            --rm --entrypoint "/bin/bash -c" airflow-worker \
            "cd /opt/raster-foundry/app-tasks/rf && python setup.py test"

    fi
    exit
fi
